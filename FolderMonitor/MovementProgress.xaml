<UserControl x:Class="FolderMonitor.MovementProgress"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="30" Width="250">
    <StackPanel>
        <TextBlock Name="FileToProcess" TextTrimming="CharacterEllipsis" Height="15" Text="[FILEPATH]" TextAlignment="Center" Width="250"/>
        <ProgressBar Value="43" Name="MovementProgressBar" Maximum="100" Minimum="0" Height="15" Background="{x:Null}" BorderBrush="#FF6E6E6E" Margin="1" />
    </StackPanel>
</UserControl>
